<div class="container">
  <h1>New Project</h1>
  <%= form_with(model: @project, url: projects_path, local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>
    <%= form.hidden_field :organization_id, value: current_user.organization_id %>
    <%= form.hidden_field :project_manager_id, value: current_user.id %>
    <div class="mb-3">
      <%= form.submit "Update Project", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>