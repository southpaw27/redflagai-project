<div class="container">
  <h1>New User</h1>
  <%= form_with(model: @user, url: update_user_user_path(@user), method: :patch, local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :email, class: "form-label" %>
      <%= form.text_field :email, class: "form-control" %>
    </div>
    <%= form.hidden_field :organization_id, value: current_user.organization_id %>
    <% if user.is_employee? %>
      <div id="employee_fields" >
        <div class="mb-3">
          <%= form.label :nickname, class: "form-label" %>
          <%= form.text_field :nickname, value: user.role.name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= form.label :title, class: "form-label" %>
          <%= form.text_field :title, value: user.role.title, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= form.label :work_focus, class: "form-label" %>
          <%= form.text_field :work_focus, value: user.role.work_focus, class: "form-control" %>
        </div>
      </div>
    <% end %>
    <div class="mb-3">
      <%= form.submit "Update user", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
